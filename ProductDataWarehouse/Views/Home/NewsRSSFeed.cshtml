@model List<PDWInfrastructure.UmbracoAPI.UmbracoInterface.NewsItem>

<h2>News & Updates</h2>
@foreach( var item in Model )
{
	<div>
	<div class="left">
	<a href="@item.Link">@item.Headline</a>
	<p>@item.PubDate.ToLongDateString() | @item.Author</p>
	</div>
	<div class="right">
	<img class="img_size_thumb" src="@item.Image" />
	</div>
	<div class="clear"></div>
	@if( Model.IndexOf( item ) != Model.Count - 1 )
 {
	<hr />
 }
	</div>
}
<div class="right">
<a href="@(ViewBag.SiteURL + "updates")">View All</a>
</div>