<script type="text/javascript">
	function popsearch(bShowSearch) {
		if (bShowSearch) {
			$('#searchLI a').hide();
			$('#searchLI div').show();
			$('#siteSearchBox').focus();
		} else {
			$('#searchLI a').show();
			$('#searchLI div').hide();
			$('#siteSearchBox').val('');
		}
	}

	function checkSearchInput() {
		return ($('#siteSearchBox').val().length > 0);
	}

	function searchKeyDown(e) {
		e = e ? e : event;
		if (e.keyCode == 27) {
			popsearch(false);
		}
	}

	$(document).ready(function () {
	});
</script>
