@using PDWModels.SpecRequests
@model SpecRequestInformation.FileListing

		@if( Model != null && Model.FileList.Any() )
  {
	  var linkId = Model.Extension + "Download";
	  var functionName = Model.Extension + "ChangeHistoryDropdown";
	  var ddlId = Model.Extension + "DDL";
	  <select id="@ddlId" onchange="@functionName ();">
	  @foreach( var item in Model.FileList )
   {
	   <option value="@item.VersionNumber" data-fileName="@item.FileName">@item.FileName (@item.UploadDate)</option>
   }
	  </select>
	  <a id="@linkId" href="#" target="_blank">Download</a>
	  <script type="text/javascript">
		function @functionName () {
			$('#@linkId').attr('href', '/Documents/Typicals/@Model.SpecName/@Model.Extension/' + $('#@ddlId').val() + '/' + $('#@ddlId option:selected').data('fileName'));
		}
		$(document).ready(function () {
			@functionName ();
		});
	  </script>
  }
