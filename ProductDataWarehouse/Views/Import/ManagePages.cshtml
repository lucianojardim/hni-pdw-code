@{
    ViewBag.Title = "ManagePages";
	ViewBag.CurrentPage = "Dealers";
	ViewBag.CurrentDealerPage = "Pages";
	Layout = "~/Views/Shared/HeaderLayout.cshtml";
}

<h2>Dealer Page List</h2>

<a href="@Url.Action( "AddDealerPage", "Import" )?iframe" id="addNewPage">Add New</a><br />
<div>
    <table id="pageList">
    <thead></thead>
    <tfoot></tfoot>
    </table>
</div>

<script type="text/javascript">
	$(document).ready(function () {

		$("#addNewPage").fancybox({
			'autoDimensions': false,
			'width': 800,
			'height': 700,
			'padding': 20,
			'margin': 0,
			'scrolling': 'auto',
			'titleShow': false,
			'type': 'iframe'
		});

		loadPages();
	});

	function deletePage(dID) {
		if (confirm('Delete Page? ')) {
			$.ajax({
				dataType: 'json',
				type: 'GET',
				url: '/Import/DeleteDealerPage',
				data: { id: dID },
				success: function (data, textStatus, jqXHR) {
					loadPages();
				},
				error: function (jqXHR, textStatus, errorThrown) {
					alert('Error deleting Page:' + errorThrown)
				}
			});
		}
	}

	var oTable = null;
	function loadPages() {
		if (oTable != null) {
			oTable.fnDraw();
			return;
		}

		oTable = $('#pageList').dataTable({
			"bServerSide": true,
			"bAutoWidth": false,
			"bFilter": true,
			"bLengthChange": false, // don't show dropdown for #items per page
			"bPaginate": true,
			"bInfo": true,
			"sAjaxSource": '@Url.Action( "FullDealerPageList" )',
			"fnServerParams": function (aoData) {
			},
			"iDisplayLength": 10,
			"fnServerData": function (sSource, aoData, fnCallback) {
				$.ajax({
					dataType: 'json',
					type: "POST",
					url: sSource,
					data: aoData,
					success: function (data, textStatus, jqXHR) {
						fnCallback(data, textStatus, jqXHR);
						$('.fbImageBtn').fancybox({
							'autoDimensions': false,
							'width': 800,
							'height': 700,
							'padding': 20,
							'margin': 0,
							'scrolling': 'auto',
							'titleShow': false,
							'type': 'iframe'
						});
					},
					error: function (jqXHR, textStatus, errorThrown) { alert('Error getting list of Pages:' + errorThrown) }
				})
			},
			"bProcessing": false, // don't want to use the default progress indicator at this time
			"aaSorting": [[0, "asc"]],
			"aoColumnDefs": [
                    { "sName": "Name", "sTitle": "Page Name", "aTargets": [0], "mDataProp": "Name", "sWidth": "200px" },
                    { "sName": "URL", "sTitle": "URL Location", "aTargets": [1], "mDataProp": "URLLocation", "sWidth": "200px" },
                    { "sName": "EditButtons",
                    	"aTargets": [2],
                    	"bSearchable": false,
                    	"bSortable": false,
                    	"mDataProp": "EditButtons", "sWidth": "75px",
                    	"fnRender": function (oObj) {
                    		var s;
                    		s = '<a href=\"@Url.Action( "EditDealerPage", "Import" )/' + oObj.aData["PageID"] + '/?iframe\" class="fbImageBtn">Edit</a>';
                    		s += '&nbsp;|&nbsp;';
                    		s += '<a href=\"#\" onclick="deletePage(' + oObj.aData["PageID"] + ');">Delete</a>';
                    		return s;
                    	}
                    }
                ]
		});
	}

</script>