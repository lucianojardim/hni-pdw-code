@{
    ViewBag.Title = "Images";
}

<h2>Images</h2>

<a href="@Url.Action( "AddImage", "Import" )?iframe" id="addNewImage">Add New</a>
<div>
    <table id="imageList">
    <thead></thead>
    <tfoot></tfoot>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addNewImage").fancybox({
            'autoDimensions': false,
            'width': 400,
            'height': 600,
            'padding': 20,
            'margin': 0,
            'scrolling': 'auto',
            'titleShow': false,
            'type': 'iframe'
        });

        loadImages();
    });

    var oTable = null;
    function loadImages() {
        if (oTable != null) {
            oTable.fnDraw();
            return;
        }

        oTable = $('#imageList').dataTable({
            "bServerSide": true,
            "bAutoWidth": false,
            "bFilter": true,
            "bLengthChange": false, // don't show dropdown for #items per page
            "bPaginate": true,
            "bInfo": true,
            "sAjaxSource": '@Url.Action( "FullImageList" )',
            "fnServerParams": function (aoData) {
            },
            "iDisplayLength": 10,
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    dataType: 'json',
                    type: "POST",
                    url: sSource,
                    data: aoData,
                    success: function (data, textStatus, jqXHR) {
                        fnCallback(data, textStatus, jqXHR);
                        $('.fbImageBtn').fancybox({
                            'autoDimensions': false,
                            'width': 400,
                            'height': 600,
                            'padding': 20,
                            'margin': 0,
                            'scrolling': 'auto',
                            'titleShow': false,
                            'type': 'iframe'
                        });
                    },
                    error: function (jqXHR, textStatus, errorThrown) { alert('Error getting list of Vehicles:' + errorThrown) }
                })
            },
            "bProcessing": false, // don't want to use the default progress indicator at this time
            "aaSorting": [[0, "asc"]],
            "aoColumnDefs": [
                    { "sName": "Name", "sTitle": "Image Name", "aTargets": [0], "mDataProp": "Name", "sWidth": "160px" },
                    { "sName": "Caption", "sTitle": "Caption", "aTargets": [1], "mDataProp": "Caption", "bSortable": false, "sWidth": "120px" },
                    { "sName": "Series", "sTitle": "Series", "aTargets": [2], "mDataProp": "Series", "bSortable": false, "sWidth": "120px" },
                    { "sName": "ImageID",
                        "aTargets": [3],
                        "bSearchable": false,
                        "bSortable": false,
                        "mDataProp": "ImageID", "sWidth": "75px",
                        "fnRender": function (oObj) {
                            var s;
                            s = '<a href=\"@Url.Action( "EditImage", "Import" )/' + oObj.aData["ImageID"] + '/?iframe\" class="fbImageBtn">Edit</a>&nbsp;|&nbsp;';
                            if (!oObj.aData["HasReferences"]) {
                                s += '<a href=\"@Url.Action( "DeleteImage", "Import" )/' + oObj.aData["ImageID"] + '\" onclick="return confirm( \'Delete Image? \' );">Delete</a>&nbsp;|&nbsp;';
                            }
                            s += '<a href=\"@Url.Action( "UploadImage", "Import" )/' + oObj.aData["ImageID"] + '/?iframe\" class="fbImageBtn">Upload</a>';
                            return s;
                        }
                    }
                ]
        });
    }

</script>