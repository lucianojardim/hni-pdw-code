					$('.goToGuideRange').hide();
                    break;
                case '4':
                    $('.imageTypeRange').hide();
                    $('.hasPeopleRange').hide();
                    $('.featuredEdgeRange').hide();
                    $('.featuredPullRange').hide();
                    $('.featuredFinishRange').show();
                    $('.featuredTableShapeRange').hide();
                    $('.featuredTableBaseRange').hide();
					$('.controlMechanismRange').hide();
					$('.goToGuideRange').hide();
                    break;
                case '5':
