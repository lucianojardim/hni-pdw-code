@{
    ViewBag.Title = "Collateral";
	ViewBag.CurrentPage = "Database";
	ViewBag.CurrentSubPage = "Collateral";
	Layout = "~/Views/Shared/HeaderLayout.cshtml";
}

<h2>Manage Collateral</h2>

<a href="@Url.Action( "AddCollateral", "Import" )?iframe" id="addNewCollateral">Add New</a><br />
<div>
    <table id="pubList">
    <thead></thead>
    <tfoot></tfoot>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#addNewCollateral").fancybox({
            'autoDimensions': false,
            'width': 400,
            'height': 600,
            'padding': 20,
            'margin': 0,
            'scrolling': 'auto',
            'titleShow': false,
            'type': 'iframe'
        });

        loadCollateral();
    });

    var oTable = null;
    function loadCollateral() {
        if (oTable != null) {
            oTable.fnDraw();
            return;
        }

        oTable = $('#pubList').dataTable({
            "bServerSide": true,
            "bAutoWidth": false,
            "bFilter": true,
            "bLengthChange": false, // don't show dropdown for #items per page
            "bPaginate": true,
            "bInfo": true,
            "sAjaxSource": '@Url.Action( "FullCollateralList" )',
            "fnServerParams": function (aoData) {
            },
            "iDisplayLength": 25,
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    dataType: 'json',
                    type: "POST",
                    url: sSource,
                    data: aoData,
                    success: function (data, textStatus, jqXHR) {
                        fnCallback(data, textStatus, jqXHR);
                        $('.fbImageBtn').fancybox({
                            'autoDimensions': false,
                            'width': 400,
                            'height': 600,
                            'padding': 20,
                            'margin': 0,
                            'scrolling': 'auto',
                            'titleShow': false,
                            'type': 'iframe'
                        });
                    },
                    error: function (jqXHR, textStatus, errorThrown) { alert('Error getting list of Collateral:' + errorThrown) }
                })
            },
            "bProcessing": false, // don't want to use the default progress indicator at this time
            "aaSorting": [[0, "asc"]],
            "aoColumnDefs": [
                    { "sName": "Name", "sTitle": "Collateral Name", "aTargets": [0], "mDataProp": "Name", "sWidth": "100px" },
                    { "sName": "PubDate", "sTitle": "Publication Date", "aTargets": [1], "mDataProp": "PubDate", "sWidth": "100px" },
                    { "sName": "ImageCt", "sTitle": "Image Count", "aTargets": [2], "mDataProp": "ImageCt", "sWidth": "100px" },
                    { "sName": "PublicationID",
                        "aTargets": [3],
                        "bSearchable": false,
                        "bSortable": false,
                        "mDataProp": "PublicationID", "sWidth": "75px",
                        "fnRender": function (oObj) {
                            var s;
                            s = '<a href=\"@Url.Action( "EditCollateral", "Import" )/' + oObj.aData["PublicationID"] + '/?iframe\" class="fbImageBtn">Edit</a>&nbsp;|&nbsp;';
                            s += '<a href=\"@Url.Action( "CollateralImages", "Import" )/' + oObj.aData["PublicationID"] + '\" class="">Manage Images</a>';
                            return s;
                        }
                    }
                ]
        });
    }

</script>